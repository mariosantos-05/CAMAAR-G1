<div class="header-actions">
  <h1>Meus Templates</h1>
  <%= link_to "Novo Template", new_admins_template_path, class: "btn-action" %>
</div>

<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<% if @templates.empty? %>
  <div class="empty-state">
    <p>Nenhum template foi criado</p>
  </div>
<% else %>
  <div class="cards-grid">
    <% @templates.each do |template| %>
      <div class="template-card">
        <div class="card-header">
          <h3><%= template.titulo %></h3>
        </div>
        <div class="card-body">
          <p class="audience-badge"><%= template.target_audience %></p>
          <p class="question-count"><%= template.questions.count %> quest√µes</p>
        </div>
        
        <div class="card-footer">
            <div class="card-icons">
                <%= link_to edit_admins_template_path(template), class: "icon-btn", title: "Editar" do %>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                      <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                  </svg>
                <% end %>

                <%= button_to admins_template_path(template), method: :delete, class: "icon-btn delete-btn", title: "Excluir", form: {style: "display:inline-block;"}, data: { confirm: "Tem certeza?" } do %>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <polyline points="3 6 5 6 21 6"></polyline>
                      <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                  </svg>
                <% end %>
            </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
