<div class="min-h-screen flex w-full">

  <div class="w-full lg:w-1/2 flex items-center justify-center bg-surface-white p-8">
    <div class="w-full max-w-md space-y-8">

      <div class="text-center lg:text-left">
        <h2 class="text-3xl font-bold text-gray-900 mb-2">LOGIN</h2>
        <p class="text-sm text-gray-500 mb-8">Entre com suas credenciais para acessar o sistema.</p>
      </div>

      <% if flash[:alert] %>
        <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6" role="alert">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-red-700">
                <%= flash[:alert] %>
              </p>
            </div>
          </div>
        </div>
      <% end %>

      <%= form_with(url: login_path, local: true, class: "space-y-6", data: { turbo: false }) do |f| %>

        <div>
          <%= f.label :login, "Email ou Matrícula", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :login,
              placeholder: "aluno@aluno.unb.br ou 123456789",
              required: true,
              autofocus: true,
              class: "appearance-none rounded-md relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-brand-purple focus:border-brand-purple sm:text-sm" %>
        </div>

        <div>
          <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password,
              placeholder: "••••••••",
              required: true,
              class: "appearance-none rounded-md relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-brand-purple focus:border-brand-purple sm:text-sm" %>
        </div>

        <div>
          <%= f.submit "Entrar",
              class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-bold rounded-md text-white bg-brand-green hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-green cursor-pointer transition duration-150 shadow-md" %>
        </div>
      <% end %>

      <div class="text-sm text-center lg:text-left mt-4">
        <a href="#" class="font-medium text-brand-purple hover:text-purple-800 transition-colors">
          Esqueceu sua senha?
        </a>
      </div>
    </div>
  </div>

  <div class="hidden lg:flex w-1/2 bg-brand-purple items-center justify-center text-center px-12">
    <div>
      <h1 class="text-5xl font-bold text-white mb-4 leading-tight tracking-wide">
        Bem vindo<br>ao<br>Camaar
      </h1>
    </div>
  </div>
</div>