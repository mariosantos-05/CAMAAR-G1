<% content_for :head do %>
  <%= stylesheet_link_tag "templates", "data-turbo-track": "reload" %>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
<% end %>

<header class="top-navbar" style="box-shadow: 0px 11px 10.7px rgba(0, 0, 0, 0.05);">
    <div style="display: flex; align-items: center; gap: 24px;">
        <span id="sidebar-toggle" style="cursor: pointer; font-size: 1.6rem;">‚ò∞</span>
        <h2 style="font-family: 'Roboto'; font-weight: 400; font-size: 24px; margin: 0; color: #000;">Gerenciamento - Templates</h2>
    </div>

    <div style="display: flex; align-items: center; gap: 20px;">
        <div class="search-bar-mockup">
            <input type="text" placeholder="search">
            <span style="position: absolute; right: 15px; top: 8px;">üîç</span>
        </div>
        
        <div class="profile-circle" style="background-color: #6C2365; width: 44px; height: 44px;">U</div>
    </div>
</header>

<div class="admin-container">
  <aside class="sidebar" id="sidebar">
      <nav class="sidebar-menu" style="width: 100%;">
          <a href="#" style="border-bottom: 1px solid #D9D9D9; height: 46px; display: flex; align-items: center; justify-content: center; color: #000;">
            Avalia√ß√µes
          </a>
          
          <a href="<%= admin_management_path %>" class="active" style="background-color: #6C2365; color: white; border-bottom: 1px solid #D9D9D9; height: 46px; display: flex; align-items: center; justify-content: center; border-left: none;">
            Gerenciamento
          </a> 
      </nav>
  </aside>
  
  <main class="main-content">
    <div class="templates-container">
      
      <% if @templates.empty? %>
        <div class="empty-message">
          <p>Nenhum template foi criado</p>
        </div>
      <% else %>
        <% @templates.each do |template| %>
          <div class="template-card">
            <div class="template-title"><%= template.titulo %></div>
            <div class="template-subtitle"><%= template.target_audience || "Geral" %></div>
            
            <div class="card-actions">
              <%= link_to edit_template_path(template), class: "action-icon", title: "Editar" do %>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                  <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                </svg>
              <% end %>

              <%= button_to template_path(template), method: :delete, class: "action-icon", form: {style: "display:inline-block;"}, onclick: "return confirm('Voc√™ tem certeza que deseja deletar este template?');", title: "Deletar" do %>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="3 6 5 6 21 6"></polyline>
                  <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                </svg>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>

      <%= link_to new_template_path, class: "template-card add-card" do %>
        <span class="plus-icon">+</span>
      <% end %>

    </div>
  </main>
</div>
